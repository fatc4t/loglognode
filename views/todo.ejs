  <body>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script> 

        <!-- 대문 -->
        <div class="container">
          <h4 class="ml-3 my-3">Sanggi Test 0.0.1</h4>
          <ul>
            <div class="row">
              <% for(let i = 0; i < posts.length; i++){ %>
                <% if(i % 3 == 0 && i != 0) { %>
                  </div>
                  <div class="row">
                <% } %>
                <div class="col-4 mb-4">
                  <div class="card text-center">
                    <div class="card-header">
                      <%= posts[i].user_nm %>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title"><%= posts[i].nikki_title %></h5>
                      <p class="card-text"><%= posts[i].nikki_text %></p>
                      <form method="DELETE">
                        <button type="button" class="delete btn btn-danger btn-sm" data-id="<%= posts[i].raiten_time %>">完了</button>
                      </form>
                    </div>
                    <div class="card-footer text-muted">
                      <%= String(posts[i]['raiten_time']).substr(4, 17) %>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          </ul>
        </div>
        
      

        <script>
            $('.delete').click(function(e){
            var element = this;
            $.ajax({
              method : 'DELETE',
              url : '/delete',
              data : {raiten_time : e.target.dataset.id},
            }).done((결과)=>{
              console.log('성공');
              $(element).closest('div.card').fadeOut();
            }).fail(function(xhr, status, error){
              console.log(xhr, status, error);
            });
          });

        </script>

